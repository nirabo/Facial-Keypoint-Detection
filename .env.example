# =============================================================================
# Facial Keypoint Detection - Environment Configuration
# =============================================================================

# Application
PROJECT_NAME=facial-keypoints
VERSION=1.0.0
ENV=dev

# Jupyter
JUPYTER_PORT=8888
JUPYTER_TOKEN=facialkeys

# Training Hyperparameters
EPOCHS=50
BATCH_SIZE=64
LEARNING_RATE=0.001
VALIDATION_SPLIT=0.2

# Model Paths
MODEL_PATH=models/model.keras
WEIGHTS_PATH=models/weights.keras

# Data Paths
TRAIN_DATA_PATH=data/training.csv
TEST_DATA_PATH=data/test.csv

# Face Detection
CASCADE_PATH=detector_architectures/haarcascade_frontalface_default.xml
SCALE_FACTOR=1.2
MIN_NEIGHBORS=5

# Image Settings
IMAGE_SIZE=96
NUM_KEYPOINTS=15

# Logging
LOG_LEVEL=INFO
